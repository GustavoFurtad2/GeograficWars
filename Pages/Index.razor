@inject ApiService ApiService
@page "/"

<PageTitle>Geografic Wars</PageTitle>

<p>@Data</p>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 300px;">
        <div class="card-body">
            <h3 class="text-center">Geografic Wars</h3>
            <div class="mb-3">
                <label class="form-label">Player Name</label>
                <input class="form-control" @bind-value=PlayerName />
            </div>
            <div class="text-center">
                <button class="btn btn-outline-primary w-100">Jogar</button>
            </div>
        </div>
    </div>
</div>


@code {

    private string PlayerName;
    private string Data;

    protected override async Task OnInitializedAsync()
    {
        Data = await ApiService.GetDataAsync();
    }
}